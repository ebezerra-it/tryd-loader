    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach",
            "trace": true,
            "port": 9230,
            "request": "attach",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node",
            // "address": "localhost",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
              ],
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ],
            // "restart": true,
            // "localRoot": "${workspaceFolder}",
            "attachExistingChildren": true,
            "autoAttachChildProcesses": true
        }
    ]
}